<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t('page_title.main'), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('page_title.main'),   root_path %></li>
        <% if logged_in? %>
          <li><%= link_to t('pages.header.my_bookshelf'), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.nick_name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('pages.header.profile'), current_user %></li>
              <li><%= link_to t('pages.header.settings'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('pages.logout'), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('pages.login'), login_path %></li>
          <li><%= link_to t('pages.signup'), signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>